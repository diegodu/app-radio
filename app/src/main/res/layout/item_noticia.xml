<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    app:cardBackgroundColor="@color/cardview_shadow_end_color"
    tools:context=".RadioDatos"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/material_on_surface_stroke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="Caída y Limpia: Martes, 1 de diciembre de 2020"
                    android:textColor="?attr/colorError"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:text="23 de Junio de 2020"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/ic" />


                    <TextView
                        android:id="@+id/textDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:justificationMode="inter_word"

                        android:scrollbars="vertical"
                        android:text="Caída y Limpia, es la dosis de risoterapia que necesitas. Escucha de Lunes a Viernes."
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textSize="18sp" />


                </LinearLayout>

                <Button
                    android:id="@+id/btn_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descargar"
                    />
                <Button
                    android:id="@+id/btn_ver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver descarga"
                    />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    />

                <TextView
                    android:id="@+id/textCarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Hola mundo"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/textCarga2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Hola mundo"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_btnPlayPause"
                        android:layout_gravity="center_vertical"
                        android:layout_width="50dp"
                        android:contentDescription="@string/app_name"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_play"
                        tools:ignore="OnClick" />


                    <TextView
                        android:id="@+id/textCurrentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/zero"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <SeekBar
                        android:id="@+id/playerSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/textTotalDuracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/zero"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.cardview.widget.CardView>